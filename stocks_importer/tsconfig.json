{
	"compilerOptions": {
		"types": [
			"node"
		],
		"target": "ES2018",
		"module": "ES2022",
		"lib": [
			"ES2018",
			"DOM"
		],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}